{
  "include": ["src"],
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "outDir": "build",
    "target": "ES6",
    "esModuleInterop": true,
    "lib": ["es6", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
